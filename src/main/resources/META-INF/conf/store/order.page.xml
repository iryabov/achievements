<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <form object-id="purchase" default-values-query-id="award">
        <fields>
            <image id="image" label="Image" data="{image}" width="200px"/>
            <output-text id="name" label="Goods" no-label-block="true" no-label="true"/>
            <output-text id="cost" label="Price" icon="fa fa-star" position="right"/>
            <text id="youhave">You have {balance} stars</text>
        </fields>
        <toolbar place="bottomLeft">
            <button label="Confirm" color="primary">
                <invoke operation-id="order"/>
            </button>
        </toolbar>
        <pre-filters>
            <eq field-id="id" param="award_id"/>
        </pre-filters>
    </form>
</simple-page>
