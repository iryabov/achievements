<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      name="Store">
    <regions>
        <panel>
            <tiles query-id="award" cols-lg="4" cols-md="3" cols-sm="1">
                <pagination show-count="false"/>
                <content>
                    <block text-field-id="name">
                        <image data="{image}" width="220">
                        </image>
                    </block>
                    <block text-field-id="name">
                        <text/>
                    </block>
                    <block text-field-id="cost">
                        <icon class="h1" type="iconAndText" position="left" text="{cost}" icon="fa fa-star"/>
                    </block>
                    <block>
                        <toolbar>
                            <button label="Buy" color="success">
                                <open-page page-id="order" route="/:award_id/order"
                                           upload="defaults" page-name="Order">
                                    <path-param name="award_id" value="{id}"/>
                                </open-page>
                            </button>
                        </toolbar>
                    </block>
                </content>
            </tiles>
        </panel>
    </regions>
</page>
