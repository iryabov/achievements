<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0">
    <operations>
        <operation id="create">
            <invocation>
                <sql>insert into achievements.award (id, name, image, type, cost)
                    values (:id, :name, :image, :type, :cost)</sql>
            </invocation>
            <in>
                <field id="id" mapping="['id']"/>
                <field id="name" mapping="['name']"/>
                <field id="image" mapping="['image']"/>
                <field id="type.id" mapping="['type']"/>
                <field id="cost" mapping="['cost']"/>
            </in>
            <out>
                <field id="id" mapping="[0]"/>
            </out>
        </operation>
        <operation id="update">
            <invocation>
                <sql>update achievements.award set name = :name, image = :image, type = :type, cost = :cost
                    where id = :id</sql>
            </invocation>
            <in>
                <field id="id" mapping="['id']"/>
                <field id="name" mapping="['name']"/>
                <field id="image" mapping="['image']"/>
                <field id="type.id" mapping="['type']"/>
                <field id="cost" mapping="['cost']"/>
            </in>
        </operation>
        <operation id="delete">
            <invocation>
                <sql>delete from achievements.award where id = :id</sql>
            </invocation>
            <in>
                <field id="id" mapping="['id']"/>
            </in>
        </operation>
    </operations>
</object>
