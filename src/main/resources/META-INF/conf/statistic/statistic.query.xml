<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">
    <list>
        <sql file="classpath:/sql/statistic.sql"/>
    </list>

    <fields>
        <field id="id">
            <select mapping="['name']"/>
        </field>
        <field id="year.id">
            <select mapping="['year']">w.year as year</select>
            <filters>
                <eq filter-id="year.id">w.year = :year.id</eq>
            </filters>
        </field>
        <field id="month.id">
            <select mapping="['month']">w.month as month</select>
            <filters>
                <eq filter-id="month.id">w.month = :month.id</eq>
            </filters>
        </field>
        <field id="cnt">
            <select mapping="['cnt']"/>
        </field>
        <field id="name">
            <select mapping="['name']"/>
        </field>
    </fields>
</query>
