    </nav>

    <extra-menu>
        <a label="#{stars}" href="/#/store" icon="fa fa-star"/>
        <a label="#{orders}" href="#" icon="fa fa-shopping-cart"/>
        <a label="#{name}" href="#" icon="fa fa-user"/>
